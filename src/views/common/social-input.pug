include ../common/mixins

mixin social-input(icon, value, mod)
    div(class=`social-input ${mod}`)
        .speaker-form__social-label(for=`${icon}-checkbox`, data-role="soc-flag")
            +icon(`${icon}-icon`, `social-list__icon social-list__icon--${icon}`)
        input.form-2__input(type="text", placeholder="Адрес", value=`${value}`, data-role="social-input")