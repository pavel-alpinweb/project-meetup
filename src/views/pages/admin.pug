extends ../admin.layout.pug
include ../common/title
include ../common/one-field-form
include ../common/text-form
include ../common/gallery-form
include ../common/events-table-form

block content
    .admin
        .admin__title
            +title('title--center title--light', 'Страница администратора')
        .admin__grid
            .admin__item
                +one-field-form('Фото главного экрана', 'file', 'Значение, которое будет в переменной')
            .admin__item
                +one-field-form('Дата для таймера', 'text', `${header.timerYear}, ${header.timersMounth}, ${header.timerDays}`)
            .admin__item
                +one-field-form('Email для заявок', 'email', header.emailForRegistration)
            .admin__item
                +text-form('Приветственный текст', welcomeText.title, welcomeText.text)
            .admin__item
                +events-table-form(events)
            .admin__item
                +text-form('Промо текст', promoText.title, promoText.text, promoText.link)
            .admin__item
                +gallery-form(gallery)
            .admin__item
                include ../common/contacts-admin-form
            .admin__item
                include ../common/speakers-form